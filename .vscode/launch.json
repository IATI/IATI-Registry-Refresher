    "version": "0.2.0",
    "configurations": [
        {
            "name": "Refresh",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["-t", "refresh"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Reload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["-t", "reload"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}